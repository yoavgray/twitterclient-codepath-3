<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/edit_text_tweet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cursorVisible="true"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:hint="@string/ask_a_question"
        android:gravity="top|left"
        android:layout_above="@+id/button_send_tweet"
        />

    <Button
        android:id="@+id/button_send_tweet"
        android:textColor="@android:color/white"
        android:text="@string/tweet_label"
        android:background="@drawable/drawable_tweet_button_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:fontFamily="Arial"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/text_view_character_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginRight="12dp"
        android:paddingTop="4dp"
        tools:text="120"
        android:layout_alignBaseline="@+id/button_send_tweet"
        android:layout_alignBottom="@+id/button_send_tweet"
        android:layout_toLeftOf="@+id/button_send_tweet"
        android:layout_toStartOf="@+id/button_send_tweet"
        android:layout_marginEnd="12dp"
        />

</RelativeLayout>